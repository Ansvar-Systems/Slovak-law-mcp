{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Slovak Law MCP",
  "description": "Golden contract tests for the Slovak Law MCP -- 12 tests covering provision retrieval, search, citation, cross-reference, and negative cases",
  "tests": [
    {
      "id": "sk-001",
      "category": "article_retrieval",
      "description": "Retrieve Data Protection Act §1 (Zákon č. 18/2018 Z.z.) -- subject matter and GDPR implementation",
      "tool": "get_provision",
      "input": {
        "document_id": "act-18-2018",
        "provision_ref": "§1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["personal data", "Regulation (EU) 2016/679", "protection"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "sk-002",
      "category": "article_retrieval",
      "description": "Retrieve Cybersecurity Act §1 (Zákon č. 69/2018 Z.z.) -- scope and NIS Directive transposition",
      "tool": "get_provision",
      "input": {
        "document_id": "act-69-2018",
        "provision_ref": "§1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["cybersecurity", "Directive (EU) 2016/1148", "NIS"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "sk-003",
      "category": "article_retrieval",
      "description": "Retrieve Criminal Code §247 (Zákon č. 300/2005 Z.z.) -- unauthorized access to a computer system",
      "tool": "get_provision",
      "input": {
        "document_id": "act-300-2005",
        "provision_ref": "§247"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["computer system", "unauthorized", "security measures", "imprisonment"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "sk-004",
      "category": "article_retrieval",
      "description": "Retrieve Commercial Code §17 (Zákon č. 513/1991 Zb.) -- definition of trade secret",
      "tool": "get_provision",
      "input": {
        "document_id": "act-513-1991",
        "provision_ref": "§17"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["trade secret", "commercial", "manufacturing", "technical"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "sk-005",
      "category": "search",
      "description": "Full-text search for 'personal data' returns Data Protection Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "personal data"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["personal data", "data protection", "Regulation"]
      }
    },
    {
      "id": "sk-006",
      "category": "search",
      "description": "Full-text search for 'cybersecurity' returns Cybersecurity Act and related provisions",
      "tool": "search_legislation",
      "input": {
        "query": "cybersecurity"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["cybersecurity", "security", "incident", "CSIRT"]
      }
    },
    {
      "id": "sk-007",
      "category": "search",
      "description": "Full-text search for 'critical infrastructure' returns Critical Infrastructure Act and Criminal Code provisions",
      "tool": "search_legislation",
      "input": {
        "query": "critical infrastructure"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["critical infrastructure", "disruption", "protection", "operator"]
      }
    },
    {
      "id": "sk-008",
      "category": "citation_roundtrip",
      "description": "Citation for Data Protection Act §5 includes slov-lex.sk URL pattern",
      "tool": "get_provision",
      "input": {
        "document_id": "act-18-2018",
        "provision_ref": "§5"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "slov-lex\\.sk",
        "text_not_empty": true
      }
    },
    {
      "id": "sk-009",
      "category": "citation_roundtrip",
      "description": "Citation for Cybersecurity Act §10 includes slov-lex.sk URL pattern",
      "tool": "get_provision",
      "input": {
        "document_id": "act-69-2018",
        "provision_ref": "§10"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "slov-lex\\.sk",
        "text_not_empty": true
      }
    },
    {
      "id": "sk-010",
      "category": "eu_cross_reference",
      "description": "Data Protection Act cross-reference to EU GDPR -- Slovak DPA implements Regulation (EU) 2016/679",
      "tool": "get_provision_eu_basis",
      "input": {
        "document_id": "act-18-2018"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["2016/679", "GDPR", "General Data Protection Regulation", "Regulation"]
      }
    },
    {
      "id": "sk-011",
      "category": "negative_test",
      "description": "Non-existent Slovak law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "act-9999-2099",
        "provision_ref": "§1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "sk-012",
      "category": "negative_test",
      "description": "Malformed provision reference returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "act-18-2018",
        "provision_ref": "§999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}